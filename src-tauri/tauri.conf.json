{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nyaapp",
  "version": "0.1.0",
  "identifier": "com.nyaa.app",
  "build": {
    "frontendDist": "../src/out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev -w src",
    "beforeBuildCommand": "npm run build -w src"
  },
  "app": {
    "windows": [
      {
        "title": "Nyaapp",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "zoomHotkeysEnabled": true,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
